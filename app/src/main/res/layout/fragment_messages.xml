<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/pro_name_pic"
        app:civ_border_color="#E8E8E8"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/textView61"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/coda"
        android:gravity="center"
        android:padding="1dp"
        android:text="@string/g9"
        android:textColor="#2C2C2C"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView62"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:gravity="center|start"
        android:padding="4dp"
        android:text="@string/g8"
        android:textColor="#000000"
        android:textSize="24sp" />

    <GridView
        android:id="@+id/gridtyy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:verticalSpacing="19dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constsa"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll88"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/et5"
            android:orientation="horizontal"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView57"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:paddingStart="3dp"
                android:paddingEnd="2dp"
                app:drawableStartCompat="@drawable/blue_arrow" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView7"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:src="@drawable/pro_name_pic"
                app:civ_border_color="#E8E8E8"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/donegal_one"
                android:gravity="center|start"
                android:padding="5dp"
                android:textColor="#0B0B0B"
                android:textSize="18sp" />

        </LinearLayout>


        <EditText
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="2dp"
            android:autofillHints=""
            android:background="@drawable/et8"
            android:ems="10"
            android:fontFamily="@font/arbutus_slab"
            android:gravity="start|top"
            android:hint="@string/g6"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:textColor="#000000"
            android:textColorHint="#1C1A1A"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button10"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button10"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/e9"
            android:drawableEnd="@drawable/ic_baseline_send_24"
            android:paddingStart="2dp"
            android:paddingEnd="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/send" />

        <GridView
            android:id="@+id/griddetailsmsg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:padding="4dp"
            android:verticalSpacing="5dp"
            app:layout_constraintBottom_toTopOf="@+id/send"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll88" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>